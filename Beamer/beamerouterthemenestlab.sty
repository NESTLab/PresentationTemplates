\usepackage{tikz}

%
% Margins
%
\setbeamersize{text margin left=5mm}
\setbeamersize{text margin right=5mm}
\setbeamersize{sidebar width left=0cm}
\setbeamersize{sidebar width right=0cm}
\setbeamersize{mini frame size=0cm}
\setbeamersize{mini frame offset=0cm}

%
% No navigation symbols
%
\setbeamertemplate{navigation symbols}{}

%
% Show page number
%
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\textwidth, sep=3ex]{footline}%
    \usebeamerfont{page number in head/foot}%
    \hfill%
    \insertframenumber
  \end{beamercolorbox}%
}

%
% Frame title
%
\setbeamertemplate{frametitle}{
  \begin{tikzpicture}
    \node(frametitle)[text width=\textwidth,minimum height=2em,inner xsep=0]{\insertframetitle};
    \draw[line width=2pt,wpired] (frametitle.south west) -- (frametitle.south east);
  \end{tikzpicture}
}