\usepackage{tikz}
\usetikzlibrary{backgrounds,calc,chains,positioning}

%
% Margins
%
\setbeamersize{text margin left=5mm}
\setbeamersize{text margin right=5mm}
\setbeamersize{sidebar width left=0cm}
\setbeamersize{sidebar width right=0cm}
\setbeamersize{mini frame size=0cm}
\setbeamersize{mini frame offset=0cm}

%
% No navigation symbols
%
\setbeamertemplate{navigation symbols}{}

%
% Show page number
%
\setbeamertemplate{footline}{
  \begin{tikzpicture}[remember picture, overlay]
    \pgfdeclarelayer{foreground}
    \pgfsetlayers{main,foreground}
    \begin{pgfonlayer}{foreground}
      \node[left,shift={(-5mm,5mm)},inner sep=0mm,fill=white] at (current page.south east) {
        \usebeamerfont{page number in head/foot}%
        \insertframenumber
    };
    \end{pgfonlayer}
  \end{tikzpicture}
}

%
% Frame title
%
\setbeamertemplate{frametitle}{
  \begin{tikzpicture}[remember picture, overlay]
    \pgfdeclarelayer{foreground}
    \pgfsetlayers{main,foreground}
    \begin{pgfonlayer}{foreground}
      \node(frametitle)[below,text width=\textwidth,text height=1.2em,text depth=0.5em,inner sep=0] at (current page.north) {\insertframetitle};
      \draw[line width=2pt,wpired] (frametitle.south west) -- (frametitle.south east);
    \end{pgfonlayer}
  \end{tikzpicture}
}